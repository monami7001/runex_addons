<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_base_pricelist_update" model="ir.ui.view">
            <field name="name">Partners Pricelist Update</field>
            <field name="model">res.partner.update.pricelists</field>
            <field name="arch" type="xml">
                <form string="Update Module List">
                    <footer>
                        <div >
                            <button name="update_pricelist" string="Update pricelists" type="object" class="oe_highlight"/> or
                            <button special="cancel" string="Close" class="oe_link"/>
                        </div>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_base_pricelist_update" model="ir.actions.act_window">
            <field name="name">Partners Pricelist Update</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner.update.pricelists</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            name="Update Partners Pricelist"
            action="action_view_base_pricelist_update"
            id="menu_view_base_pricelist_update"
            groups="base.group_no_one"
            parent="base.menu_sales"
            sequence="15"/>

    </data>
</openerp>
